---
import { getCollection } from 'astro:content';
import Layout from '@/layouts/Layout.astro'

import MarkdownPostLayout from '@/layouts/BlogPost.astro';

export async function getStaticPaths() {
  const blogEntries = await getCollection('posts');
  return blogEntries.map(entry => ({
    params: { slug: entry.slug }, props: { entry },
  }));
}

const site = Astro.site?.href

const { entry } = Astro.props;
const { Content } = await entry.render();
---

<style>
  :root {
    --main-padding: 0;
    --main-width: 100%;
  }

</style>

<Layout title={`Blog | ${entry.data.title}`} description={entry.data.excerpt} showHeader={false} meta={[
  {
    property: 'og:image',
    content: `${site}api/og?title=${entry.data.title}&tags=${entry.data.tags.join(',')}`
  },
  {
    property: 'og:image:width',
    content: `1200`
  },
  {
    property: 'og:image:height',
    content: `630`
  }
]}>
  <MarkdownPostLayout frontmatter={entry.data as any}>
    <Content />
  </MarkdownPostLayout>
</Layout>


