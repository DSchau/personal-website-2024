---
import Layout from "@/layouts/Layout.astro";
import { Favorites as FavoritesComponent } from '@/components/favorites/favorites.tsx'

import favorites from '@/assets/favorites.yaml'

const { films, series, albums, songs } = favorites
---
<style>
	h3 {
		text-align: center;
		padding: var(--padding-md) 0;

		margin: var(--padding-s) auto;
		max-width: var(--content-width);
		border-top: 1px solid var(--border-color);
	}

	section {
		margin: var(--padding-lg) 0;
		padding: var(--padding-lg) 0;
	}

	section h3 {
		text-transform: lowercase;
	}

	section > p {
		margin: 0 auto;
		width: var(--content-width);

		padding: var(--padding-md) var(--padding-lg);
	}

	.images {
		display: grid;
		grid-template-columns: 1fr;
	}

	.images > .image {
		padding: var(--padding-s);
	}

	.images img {
		max-height: 450px;
		height: 100%;
		border-radius: var(--padding-lg);
	}

	@media only screen and (min-width: var(--breakpoint-md)) {
		.images {
			grid-template-columns: repeat(2, 1fr);
		}
	}

</style>

<Layout title="Favorites • Films, Series, Albums, and Songs" copy="These are some of my favorite things. Movies, series, albums, and songs; my top five favorites. You can learn a lot about a person by what they appreciate, what they enjoy, and what matters to them, so I hope this reveals a bit more about me.">
	<section>
		<h3>Films</h3>
		<FavoritesComponent list={films} />
	</section>
	<section>
		<h3>Series</h3>
		<FavoritesComponent list={series} />
	</section>
	<section>
		<h3>Albums</h3>
		<FavoritesComponent list={albums} />
	</section>
	<section>
		<h3>Songs</h3>
		<FavoritesComponent list={songs} />
	</section>
</Layout>
