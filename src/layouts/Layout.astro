---
import { Layout as LayoutComponent } from "@/components/layout/layout";
import { getCommitCount } from '@/lib/get-commit-count.ts';

const pathname = new URL(Astro.request.url).pathname.slice(1)

const commits = await getCommitCount({
	owner: 'dschau',
	repo: 'personal-website-2024'
})

const { title, showHeader, showCopy } = Astro.props
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Dustin Schau | Product & Engineering Leader{title ? ` | ${title}` : ''}</title>
    <slot name="meta" />
	</head>
	<body>
    <LayoutComponent pathname={pathname} commits={commits} showHeader={showHeader} showCopy={showCopy}>
      <slot />
    </LayoutComponent>
	</body>
</html>